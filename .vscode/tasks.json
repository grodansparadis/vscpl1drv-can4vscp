{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build vscpl1drv-can4vscp",
            "type": "shell",
            "command": "rm -rf dest; make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "taskName": "clean & build vscpl1drv-can4vscp",
            "type": "shell",
            "command": "rm -rf dest; make clean; make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
              }
        },
        {
            "taskName": "build debian package",
            "type": "shell",
            "command": "./build_debian_package.sh",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "taskName": "build ubuntu trusty",
            "type": "shell",
            "command": "cd dist;sudo OS=ubuntu DIST=trusty ARCH=amd64 pbuilder build *.dsc",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc"
        },
    ]
}